               <id root="57346d71-ffad-463e-9b2b-76d7f3856708"/>
               <code code="55105-1" codeSystem="2.16.840.1.113883.6.1" displayName="OTC - PURPOSE SECTION"/>
               <title>Purpose</title>
               <text>
                  <paragraph>Anti-diarrheal</paragraph>
